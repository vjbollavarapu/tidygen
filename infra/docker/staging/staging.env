# TidyGen ERP Staging Environment Configuration

# Database Configuration
POSTGRES_DB=tidygen_erp_staging
POSTGRES_USER=tidygen_user
POSTGRES_PASSWORD=your-staging-password

# Django Configuration
SECRET_KEY=your-staging-secret-key
DEBUG=False
DJANGO_ENV=staging

# Domain Configuration
ALLOWED_HOSTS=staging.tidygen.com,*.staging.tidygen.com
CORS_ALLOWED_ORIGINS=https://staging.tidygen.com,https://*.staging.tidygen.com
CSRF_TRUSTED_ORIGINS=https://staging.tidygen.com,https://*.staging.tidygen.com
FRONTEND_URL=https://staging.tidygen.com

# Email Configuration
DEFAULT_FROM_EMAIL=noreply@staging.tidygen.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@tidygen.com
EMAIL_HOST_PASSWORD=your-app-password

# Web3 Configuration
WEB3_MESSAGE_PREFIX=TidyGen ERP Login
WEB3_PROVIDER_URL=https://goerli.infura.io/v3/YOUR_INFURA_KEY
WEB3_NETWORK_ID=5
WEB3_PRIVATE_KEY=your-test-web3-private-key

# AWS Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=tidygen-erp-staging
AWS_S3_REGION_NAME=us-east-1

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-staging

# Security
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
